---
const { titulo, descripcion, imagen } = Astro.props;
---

<div class="group flex flex-col focus:outline-hidden">
    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
        <!-- Background Image optimizada siguiendo patrÃ³n exacto de Services -->
        <picture>
            <source
                srcset={`/images/${imagen}.webp`}
                type="image/webp"
            />
            <img
                src={`/images/${imagen}.jpeg`}
                alt={titulo}
                class="size-full absolute top-0 start-0 object-cover group-hover:scale-105 group-focus:scale-105 transition-transform duration-500 ease-in-out"
                loading="lazy"
                decoding="async"
                width="400"
                height="300"
            />
        </picture>
    </div>

    <div class="mt-7">
        <h3
            class="text-xl font-semibold text-atenea-letter group-hover:text-atenea-letter-lighter transition-colors duration-200"
        >
            {titulo}
        </h3>
        <p class="mt-3 text-atenea-letter-lighter">{descripcion}</p>
    </div>
</div>
