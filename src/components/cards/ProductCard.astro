---
const { titulo, descripcion, imagen } = Astro.props;
---

<div class="group flex flex-col focus:outline-hidden">
    <div class="relative pt-[50%] sm:pt-[70%] rounded-xl overflow-hidden">
        <!-- Background Image optimizada -->
        <picture class="size-full absolute top-0 start-0">
            <source srcset={`${imagen}.webp`} type="image/webp">
            <img
                class="size-full object-cover group-hover:scale-105 group-focus:scale-105 transition-transform duration-500 ease-in-out rounded-xl"
                src={`${imagen}.jpg`}
                alt={titulo}
                loading="lazy"
            />
        </picture>
    </div>

    <div class="mt-7">
        <h3
            class="text-xl font-semibold text-atenea-letter group-hover:text-atenea-letter-lighter transition-colors duration-200"
        >
            {titulo}
        </h3>
        <p class="mt-3 text-atenea-letter-lighter">{descripcion}</p>
    </div>
</div>
